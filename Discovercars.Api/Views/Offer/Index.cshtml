@using Discovercars.Domain.Entity
@using Discovercars.Domain.Requests
@{
    ViewData["Title"] = "Home Page";
    var defImg = "some";
}
@model IEnumerable<Offer>

<div class="text-center">


    @if (Model != null)
    {
        <form method="post" asp-action="Index" asp-controller="Reservation">


            <input type="submit" class="btn-danger" />

            <input type="text" name="Customer.Name" />
            <input type="text" name="Customer.Surname" />

            @foreach (var offer in Model)
            {

                <div class="card" style="width: 18rem;">

                    <img class="card-img-top" src="@(@offer?.Vehicle?.ImageLink ?? @defImg) " alt="@offer?.Vehicle?.ModelName">
                    <div class="card-body">
                        <h5 class="card-title">   @offer.Vehicle.ModelName</h5>
                        <h5 class="card-title">   @offer.Vendor.Name</h5>
                        <p class="card-text">
                            @offer.Price.Amount <small>
                                @offer.Price.Currency
                            </small>
                        </p>


                        <input type="radio" required name="OfferUId" value="@offer.OfferUId" />
                    </div>
                </div>

            }

        </form>


    }
    else
    {
        <p>Nothing found</p>
    }


</div>
